<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DualPlayer">


    <TableLayout android:layout_width="0dp"
        android:layout_height="313dp"
        android:textAlignment="center" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.58" android:id="@+id/tableLayout2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:text=""
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:id="@+id/btn_1"
                android:background="@android:color/white"
                android:layout_margin="5dp"
                android:onClick="buClick"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:onClick="buClick"
                android:id="@+id/btn_2" android:background="@android:color/white" android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:onClick="buClick"
                android:id="@+id/btn_3" android:background="@android:color/white"
                android:layout_margin="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_4" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_5" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_6" android:background="@android:color/white"
                android:layout_margin="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <Button
                android:text=""
                android:onClick="buClick"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/btn_7" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_8" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:onClick="buClick"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/btn_9" android:background="@android:color/white"
                android:layout_margin="5dp"/>
        </TableRow>
    </TableLayout>
    <Button
        android:text="REPLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_replay1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintVertical_bias="0.716" android:textSize="18sp" android:textStyle="bold|italic"
        android:textAllCaps="true" android:textAlignment="center"/>
    <TextView
        android:text="Player 1: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.071" app:layout_constraintVertical_bias="0.172"
        android:textStyle="bold" android:textAllCaps="true" android:textSize="18sp" android:textColor="#FFFFFF"/>
    <TextView
        android:text="Player 2: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/p1" app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintVertical_bias="0.278" android:textColor="#FFFFFF" android:textAlignment="center"
        android:textStyle="bold" android:textAllCaps="true" android:textSize="18sp"/>
    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/p1n" app:layout_constraintStart_toEndOf="@+id/p1" android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintVertical_bias="0.181" android:textColor="#EF5350" android:textStyle="bold"
        android:textAllCaps="true" android:textAlignment="viewStart" android:textSize="18sp"
        android:fontFamily="casual"/>
    <TextView
        android:text="TextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/p2n" app:layout_constraintStart_toEndOf="@+id/p2" android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/p1n" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.259" android:fontFamily="casual" android:textSize="18sp"
        android:textStyle="bold" android:textAllCaps="true" android:textAlignment="viewStart"
        android:textColor="#EF5350"/>

</androidx.constraintlayout.widget.ConstraintLayout>