<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SinglePlayer">

    <TableLayout android:layout_width="0dp"
        android:layout_height="313dp"
        android:textAlignment="center" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:text=""
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:id="@+id/btn_1"
                android:background="@android:color/white"
                android:layout_margin="5dp"
                android:onClick="buClick"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:onClick="buClick"
                android:id="@+id/btn_2" android:background="@android:color/white" android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:onClick="buClick"
                android:id="@+id/btn_3" android:background="@android:color/white"
                android:layout_margin="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_4" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_5" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_6" android:background="@android:color/white"
                android:layout_margin="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <Button
                android:text=""
                android:onClick="buClick"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/btn_7" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:layout_width="40pt"
                android:onClick="buClick"
                android:layout_height="40pt" android:id="@+id/btn_8" android:background="@android:color/white"
                android:layout_margin="5dp"/>
            <Button
                android:text=""
                android:onClick="buClick"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/btn_9" android:background="@android:color/white"
                android:layout_margin="5dp"/>
        </TableRow>
    </TableLayout>
    <Button
        android:text="replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_replay" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintVertical_bias="0.901" android:textStyle="bold|italic" android:textAllCaps="true"
        android:textAlignment="center" android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="sans-serif-condensed-light"/>

</androidx.constraintlayout.widget.ConstraintLayout>