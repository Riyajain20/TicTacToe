<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".PlayersName">


    <TextView
        android:text="Enter Players name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.124"
        android:textAllCaps="true" android:textStyle="bold|italic" android:textAlignment="center"
        android:textColor="#EC407A" android:fontFamily="casual" android:textSize="24sp"/>
    <TextView
        android:text="Player 1: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintVertical_bias="0.193" android:textStyle="bold" android:textAllCaps="true"
        android:textAlignment="center" android:textSize="18sp" android:fontFamily="casual"
        android:textColor="#7E57C2"/>
    <TextView
        android:text="Player 2: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintVertical_bias="0.148" android:textSize="18sp" android:textStyle="bold"
        android:textAllCaps="true" android:textAlignment="center" android:fontFamily="casual"
        android:textColor="#FF7043"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player_name1"
        app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintVertical_bias="0.166" android:textSize="18sp" android:textStyle="bold"
        android:textAllCaps="true" android:textAlignment="center" android:fontFamily="casual"
        android:hint="Enter Player 1 Name" android:textColor="#7E57C2" android:text="Player 1"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player_name2"
        android:hint="Enter Player 2 Name" android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView4"
        android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/player_name1" app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintVertical_bias="0.102" android:textAlignment="center"
        android:textAllCaps="true" android:textSize="18sp" android:textColor="#FF7043" android:textStyle="bold"
        android:fontFamily="casual" android:text="Player 2"/>
    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_play_the_game" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/player_name2" app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintVertical_bias="0.279" android:textSize="24sp" android:fontFamily="casual"
        android:textStyle="bold" android:textAllCaps="true" android:textAlignment="center"
        android:textColor="#AB47BC"/>


</androidx.constraintlayout.widget.ConstraintLayout>